<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:background="#4dd0e1"
              android:layout_height="wrap_content">

        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_width="wrap_content">

            <TextView android:id="@+id/bluetooth_dialog_title"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/title_bluetooth"
                      android:textColor="#fff"
                      android:background="#424242"
                      android:textSize="@dimen/BT_Fragment_dialog_title"
                      android:paddingLeft="15dp"/>

            <TextView android:id="@+id/bluetooth_dialog_devices_around_title"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/title_other_devices"
                      android:textColor="#fff"
                      android:textSize="@dimen/BT_Fragment_TextSize"
                      android:paddingTop="4dp"
                      android:paddingLeft="15dp"
                      android:background="#757575"
                      android:layout_below="@+id/bluetooth_dialog_title"
                      android:layout_alignParentStart="true"/>


            <ListView
                    android:id="@+id/bluetooth_dialog_devices_around_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scrollbars="vertical"
                    android:layout_below="@+id/bluetooth_dialog_devices_around_title"
                    android:layout_alignParentStart="true"/>

            <TextView android:id="@+id/bluetooth_dialog_paired_devices_title"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/title_paired_devices"
                      android:textColor="#fff"
                      android:textSize="@dimen/BT_Fragment_TextSize"
                      android:paddingTop="4dp"
                      android:paddingLeft="15dp"
                      android:background="#757575"
                      android:layout_below="@+id/bluetooth_dialog_devices_around_list"
                      android:layout_alignParentStart="true"/>

            <ListView
                    android:id="@+id/bluetooth_dialog_paired_devices_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scrollbars="vertical"
                    android:layout_below="@+id/bluetooth_dialog_paired_devices_title"
                    android:layout_alignParentStart="true"/>

        </LinearLayout>
</LinearLayout>