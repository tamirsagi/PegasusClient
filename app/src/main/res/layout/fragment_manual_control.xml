<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="#263238"
                android:layout_height="match_parent">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/mc_text"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/manual_forward"
            android:background="@drawable/manual_forward"
            android:layout_above="@+id/manual_right" android:layout_toStartOf="@+id/manual_right"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/manual_backward"
            android:background="@drawable/manual_backward"
            android:layout_below="@+id/manual_right" android:layout_toStartOf="@+id/manual_right"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/manual_right"
            android:background="@drawable/manual_right"
            android:layout_alignTop="@+id/manual_left" android:layout_alignParentEnd="true"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/manual_left"
            android:background="@drawable/manual_left"
            android:layout_alignTop="@+id/mc_text" android:layout_toStartOf="@+id/manual_backward"/>
    <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manual_control_direction_forward"
            android:id="@+id/manual_control_direction_forward"
            android:layout_marginBottom="25dp"
            android:layout_above="@+id/manual_forward" android:layout_alignStart="@+id/manual_left"/>
    <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manual_control_direction_backward"
            android:id="@+id/manual_control_direction_backward"
            android:layout_below="@+id/textView2" android:layout_toEndOf="@+id/manual_control_direction_forward"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/manual_control_direction_title"
            android:id="@+id/textView2"
            android:layout_above="@+id/manual_control_direction_forward"
            android:layout_alignEnd="@+id/manual_control_direction_forward"/>
</RelativeLayout>